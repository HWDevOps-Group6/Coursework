FROM node:20-alpine

WORKDIR /app

COPY package*.json ./
RUN npm ci --omit=dev

COPY shared ./shared
COPY src ./src

ENV NODE_ENV=production
ENV GATEWAY_PORT=3000

EXPOSE 3000

HEALTHCHECK --interval=30s --timeout=5s --start-period=20s --retries=3 \
  CMD wget -qO- "http://127.0.0.1:${GATEWAY_PORT}/health" >/dev/null || exit 1

CMD ["node", "src/gateway.js"]