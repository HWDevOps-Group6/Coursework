{
  "name": "healthcare-management-system",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "services/*"
  ],
  "description": "Healthcare Management System with NodeJS REST API, MongoDB, and JWT authentication",
  "main": "src/gateway.js",
  "scripts": {
    "start": "node src/gateway.js",
    "dev": "nodemon src/gateway.js",
    "dev:auth": "cd services/auth-service && PORT=3001 npm run dev",
    "dev:gateway": "nodemon src/gateway.js",
    "dev:patient-reg": "PORT=3003 nodemon services/patient-registration-service/src/server.js",
    "dev:diagnostics-vitals": "PORT=3004 nodemon services/diagnostics-vitals-service/server.js",
    "dev:all": "concurrently \"npm run dev:auth\" \"npm run dev:patient-reg\" \"npm run dev:diagnostics-vitals\" \"npm run dev:gateway\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "healthcare",
    "api",
    "rest",
    "mongodb",
    "jwt"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^9.2.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
